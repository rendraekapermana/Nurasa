<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:paddingTop="8dp"
    android:paddingBottom="16dp"
    tools:context=".article.Article">

    <!-- Back Button -->
    <ImageView
        android:id="@+id/back_button"
        android:layout_width="77dp"
        android:layout_height="57dp"
        android:src="@drawable/ic_back"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Logo -->
    <ImageView
        android:id="@+id/logo"
        android:layout_width="77dp"
        android:layout_height="57dp"
        android:src="@drawable/logo"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Judul Artikel -->
    <TextView
        android:id="@+id/article_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-black"
        android:text="Menu 1"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/back_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Artikel 1 -->
    <TextView
        android:id="@+id/article1_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Rendang Khas Indonesia"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/article_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/article1_image"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginBottom="8dp"
        android:scaleType="centerCrop"
        android:src="@drawable/rendang"
        app:layout_constraintTop_toBottomOf="@id/article1_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/article1_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="Rendang adalah masakan tradisional Indonesia yang sangat terkenal dan diakui secara internasional. Ini adalah masakan daging yang dimasak dalam campuran bumbu rempah-rempah yang kaya, dengan santan kelapa yang kental. Masakan ini berasal dari daerah Minangkabau di Sumatera Barat, tetapi telah menjadi populer di seluruh Indonesia dan bahkan di luar negeri.
Pada tahun 2011, rendang dinobatkan sebagai Hidangan Terlezat di Dunia oleh CNN Travel, menunjukkan popularitas dan kelezatan masakan ini secara global.
Bahan-bahan Utama Pembuatan Rendang yaitu Daging Sapi, Santan dan bumbu rempah-rempah."
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/article1_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
